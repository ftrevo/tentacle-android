<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:src="@drawable/logo_tentacle_error_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />

    <ImageView
            android:id="@+id/icon"
            android:layout_height="@dimen/errorImageSize"
            android:layout_width="@dimen/errorImageSize"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="@dimen/componentsMarginDefaultError"
            android:src="@drawable/il_wow"
            app:layout_constraintBottom_toTopOf="@id/guide"
            app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
            android:textAppearance="@style/TextBlack.22sp"
            android:layout_marginTop="@dimen/componentsMarginDefaultError"
            android:id="@+id/errorDescription"
            android:textColor="@color/textHint"
            android:gravity="center"
            android:text="@string/no_game_registered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

    <br.com.concrete.tentacle.custom.ButtonView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/errorDescription"
            android:layout_marginTop="@dimen/componentsMarginDefaultError"
            android:id="@+id/buttonNameError"
            style="@style/StyleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            app:buttonName="@string/add_new_game"
            android:backgroundTint="@color/colorAddNewGame"
            />

</androidx.constraintlayout.widget.ConstraintLayout>