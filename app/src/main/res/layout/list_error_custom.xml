<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:background="@color/bgBottomBar"
        android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_height="@dimen/errorImageSize"
            android:layout_width="@dimen/errorImageSize"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="@dimen/componentsMarginDefaultError"
            android:src="@drawable/ilustra_tentacle"
            app:layout_constraintBottom_toTopOf="@id/guide"
            app:layout_constraintHorizontal_bias="0.5"/>

        <TextView
            android:textAppearance="@style/TextHeavy.16sp"
            android:layout_marginTop="@dimen/componentsMarginDefaultError"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:id="@+id/errorDescription"
            android:textColor="@color/textColor"
            android:gravity="center"
            tools:text="@string/no_game_registered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

        <br.com.concrete.tentacle.custom.ButtonView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/errorDescription"
            android:layout_marginTop="@dimen/componentsMarginDefaultError"
            android:focusable="true"
            android:id="@+id/buttonNameError"
            style="@style/StyleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            app:buttonName="@string/add_new_game"
            app:textColorButton="@color/textColorErrorButtonName"
            android:backgroundTint="@color/textColor"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>