<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingBottom="@dimen/margin_default">

        <include layout="@layout/logo_tentacle"/>

        <br.com.concrete.tentacle.custom.GameView
                android:id="@+id/gameView"
                android:padding="@dimen/margin_default"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"/>

        <include
                layout="@layout/dashed_include"
                android:id="@+id/dashed"
                app:layout_constraintTop_toBottomOf="@id/gameView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"/>

        <LinearLayout
                android:paddingTop="@dimen/margin_default"
                android:paddingLeft="@dimen/margin_default"
                android:id="@+id/platformLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/dashed"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tvGamePlatformTitle"
                    android:text="@string/text_game_platform"
                    android:textAppearance="@style/TextHeavy.16sp"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tvGamePlatform"
                    tools:text="@string/bullet_ps3"
                    android:textAppearance="@style/TextBook.16sp"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
                android:id="@+id/tvGameOwnerTitle"
                android:paddingRight="@dimen/margin_default"
                android:text="@string/text_game_owner"
                app:layout_constraintTop_toBottomOf="@+id/gameView"
                app:layout_constraintStart_toEndOf="@id/platformLayout"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_25"
                android:textAppearance="@style/TextHeavy.16sp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tvGameOwner"
                tools:text="@string/loremText"
                android:lines="@integer/line_1"
                android:paddingRight="@dimen/margin_default"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@+id/tvGameOwnerTitle"
                app:layout_constraintStart_toStartOf="@id/tvGameOwnerTitle"
                android:textAppearance="@style/TextBook.16sp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:paddingLeft="@dimen/margin_default"
                android:paddingRight="@dimen/margin_default"
                android:paddingBottom="@dimen/margin_default"
                android:id="@+id/tvLoanInfo"
                android:layout_marginTop="@dimen/dp_8"
                android:textAppearance="@style/TextMedium.14sp"
                tools:text="@string/loan_info_expired"
                android:textColor="@color/loan_state_expired"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvGameOwner"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"/>

        <include
                layout="@layout/progress_include"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.Group
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/group"
                android:visibility="gone"
                app:constraint_referenced_ids="gameView,platformLayout,tvGameOwnerTitle,tvGameOwner"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>