<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:clickable="true"
        android:focusable="true"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_200"
               android:src="@drawable/logo_bg"
               android:translationY="@dimen/dp_250"
               android:paddingEnd="@dimen/dp_55"
               android:rotation="@integer/rotation_menu_image"
               android:scaleX="@integer/scale_menu_image"
               android:scaleY="@integer/scale_menu_image"
               android:alpha="@dimen/tentacleLogoOpacity"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="@dimen/dp_0"
            android:layout_marginTop="@dimen/margin_default"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:background="@android:color/transparent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:orientation="vertical"
            android:gravity="bottom">

        <ImageView
                android:id="@+id/iconProfile"
                android:src="@drawable/ic_logo_actionbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/guide"
                android:layout_width="@dimen/dp_105"
                android:layout_height="@dimen/dp_105"/>

        <ImageView
                android:id="@+id/camera"
                android:background="@drawable/shape_camera_profile"
                android:src="@drawable/ic_camera"
                app:layout_constraintEnd_toEndOf="@id/iconProfile"
                app:layout_constraintBottom_toBottomOf="@id/iconProfile"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"/>

        <TextView
                android:id="@+id/name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guide"
                android:layout_marginTop="@dimen/dp_8"
                tools:text="@string/loremText"
                android:textColor="@color/white"
                android:maxLines="@integer/line_2"
                android:gravity="center"
                android:textAppearance="@style/TextMedium.16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/state"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name"
                tools:text="@string/version"
                android:textColor="@color/menuItem"
                android:lines="@integer/line_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
            android:padding="@dimen/dp_8"
            android:textAppearance="@style/TextMedium.14sp"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile"
            android:drawablePadding="@dimen/dp_16"
            android:drawableStart="@drawable/ic_person"
            android:textColor="@color/menuItem"
            android:lines="@integer/line_1"
            android:ellipsize="end"
            android:text="@string/profile"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"
    />

    <TextView
            android:padding="@dimen/dp_8"
            android:textAppearance="@style/TextMedium.14sp"
            android:layout_marginStart="@dimen/margin_default"
            android:id="@+id/logout"
            android:drawablePadding="@dimen/dp_16"
            android:layout_marginTop="@dimen/margin_default"
            android:drawableStart="@drawable/ic_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/menuItem"
            android:ellipsize="end"
            android:lines="@integer/line_1"
            android:text="@string/exit"
            app:layout_constraintTop_toBottomOf="@id/profile"
            app:layout_constraintStart_toStartOf="parent"
    />

    <TextView
            android:id="@+id/version"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/margin_default"
            android:text="@string/version"
            android:textColor="@color/white"
            android:lines="@integer/line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>