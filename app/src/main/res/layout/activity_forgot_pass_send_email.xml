<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="br.com.concrete.tentacle.features.forgotPassword.sendEmail.ForgotPassSendEmailActivity">

    <include
        android:id="@+id/imgBackground"
        layout="@layout/default_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <include
        layout="@layout/button_back_arrow"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backArrowButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvReceivePass"
                    android:textAppearance="@style/TextHeavy.20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:layout_marginTop="@dimen/marginTopReceivePassword"
                    android:letterSpacing="@dimen/letterSpacing"
                    android:gravity="center_horizontal"
                    android:text="@string/recover_password"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextMedium.16sp"
                    android:textColor="@color/textColor"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/marginTopMessage"
                    android:text="@string/add_email_receive_code"
                    app:layout_constraintTop_toBottomOf="@+id/tvReceivePass"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tvReceivePass"
                    app:layout_constraintEnd_toEndOf="@+id/tvReceivePass"/>

            <br.com.concrete.tentacle.custom.TentacleEditText
                    android:id="@+id/edtEmail"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"
                    app:errorLabel="@string/email_error"
                    app:label="@string/email"
                    android:layout_marginEnd="@dimen/marginBorderLogin"
                    android:layout_marginStart="@dimen/marginBorderLogin"
                    android:layout_marginTop="@dimen/dp_55"
                    app:layout_constraintTop_toBottomOf="@id/tvMessage"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            <br.com.concrete.tentacle.custom.ButtonView
                    android:id="@+id/btSend"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    style="@style/StyleButton"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_marginEnd="@dimen/marginBorderLogin"
                    android:layout_marginStart="@dimen/marginBorderLogin"
                    app:buttonName="@string/send"
                    app:layout_constraintTop_toBottomOf="@+id/edtEmail"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAlreadyHaveToken"
                    android:textAppearance="@style/TextHeavy.16sp"
                    android:padding="@dimen/paddingClickTextView"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/textColor"
                    app:layout_constraintTop_toBottomOf="@+id/btSend"
                    app:layout_constraintStart_toStartOf="@+id/btSend"
                    android:text="@string/alreadyHaveToken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_mobile"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvAlreadyHaveToken"
                    app:layout_constraintVertical_bias="@dimen/biasImageLogo"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>