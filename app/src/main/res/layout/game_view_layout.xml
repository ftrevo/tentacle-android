<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@android:color/transparent"
        tools:background="@color/colorPrimary"
        android:paddingBottom="@dimen/margin_default">

    <include
        android:id="@+id/header"
        layout="@layout/game_view_header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvGameSummary"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_26"
        android:textColor="@color/textColor"
        android:textAppearance="@style/TextMedium.14sp"
        tools:text="@string/loremText"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvGameSummary"
        android:layout_marginTop="@dimen/margin_default"
        android:textColor="@color/textColor"
        android:textAppearance="@style/TextHeavy.16sp"
        android:id="@+id/tvInfo"
        android:text="@string/text_game_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:showDividers="middle"
        android:divider="@drawable/game_mode_divider"
        android:orientation="vertical"
        android:drawableStart="@drawable/ic_multiplayer"
        android:drawablePadding="@dimen/dp_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvInfo"
        android:textColor="@color/textColor"
        android:textAppearance="@style/TextMedium.14sp"
        android:id="@+id/gameModeContainer"
        android:text="@string/text_game_single_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:drawableStart="@drawable/ic_multiplayer"
            android:drawablePadding="@dimen/dp_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gameModeContainer"
            android:textColor="@color/textColor"
            android:textAppearance="@style/TextMedium.14sp"
            android:id="@+id/tvMultiPlayer"
            android:text="@string/text_game_multi_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
                android:drawableStart="@drawable/ic_multiplayer"
                android:drawablePadding="@dimen/dp_8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gameModeContainer"
                android:textColor="@color/textColor"
                android:textAppearance="@style/TextMedium.14sp"
                android:text="@string/text_game_multi_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gameModeContainer"
        android:layout_marginTop="@dimen/margin_default"
        android:textColor="@color/textColor"
        android:textAppearance="@style/TextHeavy.16sp"
        android:id="@+id/tvGameGender"
        android:text="@string/text_game_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.chip.ChipGroup
        app:chipSpacingHorizontal="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvGameGender"
        android:id="@+id/genresContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            tools:text="Qwerty Keyboard"
            android:textColor="@color/textColor"
            android:background="@drawable/shape_border_game_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            tools:text="Qwerty"
            android:textColor="@color/textColor"
            android:background="@drawable/shape_border_game_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            tools:text="Abc"
            android:textColor="@color/textColor"
            android:background="@drawable/shape_border_game_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>