<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools">

    <TextView
            android:textAppearance="@style/TextHeavy.14sp"
            android:textColor="@android:color/white"
            android:textAllCaps="true"
            tools:text="Label text"
            android:id="@+id/tvLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputEditText
            android:textColor="#fff"
            android:textAppearance="@style/TextMedium.14sp"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_2"
            tools:text="Teste teste teste"
            android:background="@drawable/shape_border_rounded_white_alpha_10"
            android:id="@+id/edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:textAppearance="@style/TextMedium.12sp"
            android:visibility="invisible"
            android:textColor="@color/red"
            tools:text="Label text"
            android:id="@+id/tvError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>