<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <include layout="@layout/default_background"/>

        <TextView
                android:textAppearance="@style/TextBlack.22sp"
                android:id="@+id/tvTitle"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/textHint"
                android:text="@string/create_account_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <br.com.concrete.tentacle.custom.TentacleEditText
                style="@style/TextInputLayoutStyle"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                app:errorLabel="@string/email_error"
                app:label="@string/email"
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/edtEmail"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <br.com.concrete.tentacle.custom.TentacleEditText
                style="@style/TextInputLayoutStyle"
                android:inputType="textCapWords"
                android:imeOptions="actionNext"
                app:errorLabel="@string/name_error"
                app:label="@string/register_name_hint"
                android:id="@+id/edtUserName"
                app:layout_constraintTop_toBottomOf="@id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <br.com.concrete.tentacle.custom.TentacleEditText
                style="@style/TextInputLayoutStyle"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                app:errorLabel="@string/password_error"
                app:label="@string/password"
                android:id="@+id/edtPassword"
                app:layout_constraintTop_toBottomOf="@id/edtUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <br.com.concrete.tentacle.custom.TentacleEditText
                style="@style/TextInputLayoutStyle"
                android:inputType="phone"
                android:imeOptions="actionNext"
                app:errorLabel="@string/phone_error"
                app:label="@string/register_ddd_phone_hint"
                android:id="@+id/edtPhone"
                app:layout_constraintTop_toBottomOf="@id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <br.com.concrete.tentacle.custom.TentacleSearchSpinner
                android:layout_marginEnd="@dimen/dp_4"
                app:errorLabel="@string/state_error"
                app:label="@string/state_hint"
                android:id="@+id/spState"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="4"
                app:layout_constraintStart_toStartOf="@+id/edtPhone"
                app:layout_constraintTop_toBottomOf="@+id/edtPhone"/>

        <br.com.concrete.tentacle.custom.TentacleSearchSpinner
                app:errorLabel="@string/city_error"
                app:label="@string/city_hint"
                android:layout_marginEnd="@dimen/margin_default"
                android:layout_marginStart="@dimen/dp_8"
                android:id="@+id/spCity"
                app:layout_constraintTop_toTopOf="@+id/spState"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/spState"/>

        <br.com.concrete.tentacle.custom.ButtonView
                android:layout_marginTop="@dimen/defaultButtonTopMargin"
                android:id="@+id/btnCreateAccount"
                style="@style/StyleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:buttonName="@string/create_account"
                android:layout_marginEnd="@dimen/margin_default"
                android:layout_marginStart="@dimen/margin_default"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spState"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAlreadyAccount"
                android:textAppearance="@style/TextHeavy.16sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_account"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/margin_default"
                android:layout_marginStart="@dimen/margin_default"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnCreateAccount"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                app:layout_constraintTop_toBottomOf="@id/tvAlreadyAccount"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>