<?xml version="1.0" encoding="utf-8" ?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/arrow_back</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:screenOrientation">portrait</item>
    </style>


    <style name="TextInputLayoutStyle">
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
    </style>


    <style name="ButtonSpinnerStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/TextMedium.14sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:backgroundTint">@color/backgroundSpinner</item>

    </style>

    <style name="StyleButton">
        <item name="textSizeButton">@dimen/textSizeButton</item>
        <item name="textColorButton">@android:color/white</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAppearance">@style/TextBlack.16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/minHeight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/shape_border_rounded_blue</item>
        <item name="android:textSize">@dimen/sizeButton</item>
    </style>

    <style name="StyleCLearFilterButton" parent="StyleButton">
        <item name="textColorButton">@color/colorButtonBlue</item>
        <item name="android:textColor">@color/colorButtonBlue</item>
        <item name="android:background">@drawable/shape_border_rounded_white</item>
    </style>

    <style name="StyleRadioButton">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="StyleCheckbox">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="StyleTextCardHome">
        <item name="android:layout_marginTop">@dimen/dp_95</item>
        <item name="android:layout_marginBottom">@dimen/dp_87</item>
        <item name="android:layout_marginStart">@dimen/dp_8</item>
        <item name="android:layout_marginEnd">@dimen/dp_8</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/TextBlack.24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LibraryBullets">
        <item name="android:layout_marginTop">@dimen/dp_7</item>
        <item name="android:layout_marginEnd">@dimen/dp_4</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StyleDialogFragment" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowNoTitle">true</item>
        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="StyleTextViewLendGame">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:lineSpacingExtra">@dimen/lineSpacingExtra</item>
    </style>

    <style name="StyleTextViewLendGame.UserTextHeavy">
        <item name="android:textAppearance">@style/TextHeavy.16sp</item>
    </style>

    <style name="StyleTextViewLendGame.UserTextMedium">
        <item name="android:textAppearance">@style/TextMedium.16sp</item>
    </style>

    <style name="StyleTextViewLendGame.UserTextHeavy.Label">
        <item name="android:layout_marginTop">@dimen/dp_26</item>
    </style>

    <style name="StyleTextViewLendGame.UserTextHeavy.WithShape">
        <item name="android:background">@drawable/shape_border_white</item>
        <item name="android:layout_marginTop">@dimen/dp_6</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="StyleTextViewLendGame.UserTextMedium.Date">

    </style>

    <style name="Chip">
        <item name="chipSurfaceColor">@android:color/transparent</item>
        <item name="android:checkable">true</item>
        <item name="chipBackgroundColor">@color/color_chip_state</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:width">@dimen/chipWidth</item>
        <item name="android:height">@dimen/chipHeight</item>
        <item name="android:textAlignment">center</item>
    </style>
    <color name="backgroundSpinner">#0FFFFFFF</color>
</resources>
